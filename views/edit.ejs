<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/styles.css">
</head>

<body>
<%- include('includes/navigation.ejs') %>
<main>
    <form  class="product-form add-user" action="/<% if (editing) { %>edit-user<% } else { %>add-user<% } %>" method="POST">
            <div>
                <label for="name-input">Name:</label>
                <input id="name-input" type="text" placeholder="name" name="name" value="<%if (editing)  { %> <%= user.name %><% } %>">
            </div>
            <div>
                <label for="lastname-input">Lastname:</label>
                <input id="lastname-input" type="text" placeholder="lastName" name="lastname" value="<%if (editing)  { %> <%= user.lastname %><% } %>">
            </div>
            <div>
                <label for="image-input">ImageUrl:</label>
                <input id="image-input" type="text" placeholder="Image Url" name="imageUrl" value="<%if (editing)  { %> <%= user.imageUrl %><% } %>">
            </div>
            <%if(editing) { %>
                <input type="hidden" value="<%= user.id %>" name="userId">
            <% } %>
            <button type="submit" class="btn">Edit</button>
    </form>
</main>
<%- include('includes/end.ejs') %>